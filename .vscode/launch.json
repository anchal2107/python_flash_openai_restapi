    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py", // Replace with the path to your Flask app file
            "args": [
                "run",
            ],
            "env": {
                "FLASK_ENV": "development",
                "FLASK_APP": "${workspaceFolder}/run.py" // Replace with the path to your Flask app file
            },
            "console": "integratedTerminal",
            "stopOnEntry": false
        }
    ]
}